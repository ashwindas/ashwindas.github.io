#!/bin/bash
# Quick script to run Git optimization

SCRIPT_PATH="$( cd "$( dirname "${BASH_SOURCE[0]}" )" &> /dev/null && pwd )"
OPTIMIZE_SCRIPT="$SCRIPT_PATH/.cursor/scripts/git-optimize.sh"

if [ -f "$OPTIMIZE_SCRIPT" ]; then
    echo "Running Git optimization..."
    sh "$OPTIMIZE_SCRIPT"
else
    echo "Error: Git optimization script not found at $OPTIMIZE_SCRIPT"
    echo "Make sure you're running this from the repository root directory."
    exit 1
fi 